block content
  div F12를 눌러 console 탭과 network 탭을 확인하세요.
  script(src='/socket.io/socket.io.js')
  script.
    const socket = io.connect('http://localhost:9090', {
      path: '/socket.io',
      transports: ['websocket']
    });

    socket.on("connect", () => {
      console.log(socket.id); // ojIckSD2jqNzOqIrAGzL
      socket.on("hello", (arg) => {
        console.log(arg); // world
    });

    });